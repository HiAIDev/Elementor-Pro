{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "declarationDir": "types",
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src/**/*", "example/**/*", "docs/**/*", "test/**/*", "shims-vue.d.ts"],
  "exclude": ["node_modules", "lib", "types"]
}
